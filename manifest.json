{
    "manifest_version": 3,
    "name": "TabSpy: Smart Tab Usage Tracker",
    "version": "1.0",
    "description": "Tracks your tab usage, categorizes productivity, and visualizes it with charts.",
    "permissions": ["tabs", "storage", "activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icons/icon128.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "128": "icons/icon128.png"
    }
  }
  